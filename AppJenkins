pipeline {
    agent any

    environment {
        PLATFORM = 'linux_amd64'        
        BIN_PATH = '/var/lib/jenkins/.local/bin'
    }

    stages {        
       
        stage('Install kubectl') {
            steps {            
                 echo "Install App"
                sh 'kubectl apply -f https://github.com/aws-containers/retail-store-sample-app/releases/latest/download/kubernetes.yaml'
                sh 'kubectl wait --for=condition=available deployments --all'                                     
                echo "Check App status"                
                sh 'kubectl get svc ui'                       
            }
        }


}    
}